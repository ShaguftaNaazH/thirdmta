<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core">
	<Table id="employeesTable" inset="false" showSeparators="Inner" headerText="Employees" items="{/Employees}">
        <columns>
            <Column>
				<Text text="{i18n>EmployeeID}" />
			</Column>
			<Column>
				<Text text="{i18n>FullName}" />
            </Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier
						title="{EmployeeID}"/>
						
					<Text  text="{TitleOfCourtesy} {FirstName} {LastName}" />
					
				</cells>
			</ColumnListItem>
		</items>
    </Table>
</core:FragmentDefinition>